<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/biaoTi"
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recommendMax"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="推荐"
            android:textColor="#333333"
            android:textSize="16px" />

        <TextView
            android:id="@+id/recommend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="推荐"
            android:textColor="#999999"
            android:textSize="14px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/attention"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="关注"
            android:textColor="#999999"
            android:textSize="14px" />


        <TextView
            android:id="@+id/attentionMax"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="关注"
            android:textColor="#333333"
            android:textSize="16px"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/xiaBiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/biaoTi">

        <View
            android:id="@+id/leftView"
            android:layout_width="20px"
            android:layout_height="2px"
            android:layout_marginLeft="83px"
            android:background="#333333" />

        <View
            android:id="@+id/rightView"
            android:layout_width="20px"
            android:layout_height="2px"
            android:layout_marginLeft="168px"
            android:background="#333333"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/hengXiang"
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:layout_below="@id/xiaBiao"
        android:background="#E5E5E5" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hengXiang"></android.support.v4.view.ViewPager>

    <ImageView
        android:layout_width="65px"
        android:layout_height="65px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="20px"
        android:src="@mipmap/img_personal_center" />

    <ImageView
        android:layout_width="65px"
        android:layout_height="65px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20px"
        android:layout_marginRight="20px"
        android:src="@mipmap/img_publish" />
</RelativeLayout>