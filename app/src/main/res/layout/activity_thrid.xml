<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="code.xp.mysocialappteam.activity.ThridActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recommendMax"
            android:layout_width="32px"
            android:layout_height="22px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="103px"
            android:text="推荐"
            android:textColor="#333333"
            android:textSize="16px" />

        <TextView
            android:id="@+id/recommend"
            android:layout_width="28px"
            android:layout_height="20px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="107px"
            android:text="推荐"
            android:textColor="#999999"
            android:textSize="14px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/attention"
            android:layout_width="28px"
            android:layout_height="20px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="107px"
            android:text="关注"
            android:textColor="#999999"
            android:textSize="14px" />

        <TextView
            android:id="@+id/attentionMax"
            android:layout_width="32px"
            android:layout_height="22px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="103px"
            android:text="关注"
            android:textColor="#333333"
            android:textSize="16px"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/leftView"
            android:layout_width="20px"
            android:layout_height="2px"
            android:layout_marginLeft="109px"
            android:background="#333333" />

        <View
            android:id="@+id/rightView"
            android:layout_width="20px"
            android:layout_height="2px"
            android:layout_marginLeft="115px"
            android:background="#333333"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#E5E5E5" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>
